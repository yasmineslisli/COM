@{
    ViewData["Title"] = "ImportExcel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-info rounded p-4">
            <form method="post" asp-action="ImportExcel" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Upload Excel File:</label>
                    <input type="file" name="formFile" class="form-control" accept=".csv,.xls,.xlsx"/>
                </div>
                <input type="submit" class="btn btn-sm btn-primary float-end right" value="Upload" />
            </form>
        </div>
    </div>
</div>
