@model PaginatedList<DropDown.Models.Detail>

@{
    ViewData["Title"] = "ListDetails";
}


<i class="pull-left "><img src="~/img/icons8-home-48.png" /></i>
<span><h1>/Prévision/Détail/Liste des détails</h1></span>


<table class="styled-table">
    <thead>
        <tr>

            @*//dd prev*@
            <th>
                <a asp-action="ListDetails" asp-route-sortOrder="@ViewData["DdSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Délegation Régionale</a>
            </th>
            <th>
                <a asp-action="ListDetails" asp-route-sortOrder="@ViewData["ActionSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Action</a>
            </th>
            <th>
                <a asp-action="ListDetails" asp-route-sortOrder="@ViewData["NumDossierSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Numero de dossier</a>
            </th>
            <th>
                TRN
            </th>
            <th>
                Indice TRN
            </th>
            <th>
                Numero TRN
            </th>
            <th>
                Superficie
            </th>
            <th>
                Valeur
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dd.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prévision.Objectif.ActionProj.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumDossier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndiceTrn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTrn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Superficie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valeur)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                
                <a asp-action="DeleteDetails" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

        <a asp-action="ListPrevision"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex - 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @prevDisabled">
            Précèdent
        </a>
        <a asp-action="ListPrevision"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-pageNumber="@(Model.PageIndex + 1)"
           asp-route-currentFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default @nextDisabled">
            Suivant
        </a>
