@model IEnumerable<DropDown.Models.User>

@{
    ViewData["Title"] = "ListUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Liste des utilisateurs</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-primary mb-2">Ajouter utilisateur</a>
</p>
<table class="styled-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.structure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profil)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.structure.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profil.Name)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a>|<a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                
                
            </td>
        </tr>
}
    </tbody>
</table>
