@model DropDown.Models.Projet

@{
    ViewData["Title"] = "CreateProjet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<i class="pull-left "><img src="~/img/icons8-home-48.png" /></i>
<span><h1>/Projet/Ajouter le projet</h1></span>

<hr />
<section id="contact">
    <div class="container-fluid">
        <div class="row wow fadeInUp">
            <div class="col-6 offset-3">
        <form asp-action="CreateProjet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ProgrammeId" class="form-control" value="@ViewBag.ProgrammeId" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
</section>
<div>
    <a asp-action="ListProj">Revenir</a>
</div>

